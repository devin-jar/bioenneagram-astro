---
// src/pages/404.astro
import Layout from '~/layouts/Layout.astro'; // Layout base
import { getHomePermalink } from '~/utils/permalinks';
import { getPageKeyForPath, getAlternateLinks } from '../utils/hreflang-mapping';

import { getTranslator, defaultLang } from '~/i18n';

interface JsonModule { default?: Record<string, any>; [key: string]: any; }
// Para 404, Astro.currentLocale podría no estar definido como se espera si la ruta no coincide con ningún idioma.
// Es más seguro usar defaultLang aquí o una lógica más robusta si quieres 404 localizado.
// Por simplicidad, usaremos el idioma detectado o el por defecto.
const currentLocaleFor404 = Astro.currentLocale || defaultLang;

const translationModules = import.meta.glob('~/i18n/locales/**/translation.json', { eager: true }) as Record<string, JsonModule | undefined>;
let pageTranslations: Record<string, any> | undefined;
const expectedModulePath = `/src/i18n/locales/${currentLocaleFor404}/translation.json`;
const moduleCandidate = translationModules[expectedModulePath];

if (moduleCandidate) {
  pageTranslations = moduleCandidate.default || moduleCandidate;
} else {
  const defaultModulePath = `/src/i18n/locales/${defaultLang}/translation.json`;
  const defaultModuleCandidate = translationModules[defaultModulePath];
  if (defaultModuleCandidate) {
    pageTranslations = defaultModuleCandidate.default || defaultModuleCandidate;
  } else {
    pageTranslations = {};
  }
}
const t = getTranslator(pageTranslations || {}, currentLocaleFor404);

const metadata = {
  title: t('error404Page.meta.title', {}, { defaultValue: '404 Not Found' })
};

const pageKey = getPageKeyForPath(Astro.url.pathname); // Pathname might be tricky for 404, but getPageKeyForPath has a '404' key.
const alternateLinks = pageKey ? getAlternateLinks(pageKey) : undefined;

if (alternateLinks && Object.keys(alternateLinks).length > 0) {
  metadata.alternateLinks = alternateLinks;
}

const homeLink = getHomePermalink(currentLocaleFor404);
---

<Layout metadata={metadata}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-9xl">
          <span class="sr-only">{t('error404Page.title')}</span>
          <span class="text-primary">{t('error404Page.mainText')}</span>
        </h2>
        <p class="text-3xl font-semibold md:text-3xl">{t('error404Page.sorryText')}</p>
        <p class="mt-4 mb-8 text-lg text-muted dark:text-slate-400">
          {t('error404Page.infoText')}
        </p>
        <a rel="noopener noreferrer" href={homeLink} class="btn ml-4">{t('error404Page.buttonText')}</a>
      </div>
    </div>
  </section>
</Layout>